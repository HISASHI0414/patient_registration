<h1>マイページ作成</h1>

<%= form_with model: @patient, url: patients_create_path do |f| %>
  <%= f.hidden_field :id, value: @patient.id %>
  <p>
    <strong>歯科医院名:</strong> <%= Clinic.find(@patient.clinic_id).clinic_name %><br>
    <strong>カルテNo.:</strong> <%= @patient.medical_record_no %><br>
    <strong>氏名:</strong> <%= @patient.last_name %> <%= @patient.first_name %><br>
    <strong>氏名（カナ）:</strong> <%= @patient.last_name_kana %> <%= @patient.first_name_kana %><br>
    <strong>生年月日:</strong> <%= @patient.birth_date %><br>
    <strong>性別:</strong> <%= @patient.gender %><br>
  </p>
  <p>
    <%= f.label :email, "メールアドレス" %><br>
    <%= f.email_field :email %>
  </p>
  <p>
    <%= f.label :password, "パスワード" %><br>
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.label :password_confirmation, "パスワード確認" %><br>
    <%= f.password_field :password_confirmation %>
  </p>
  <!-- app/views/devise/registrations/new.html.erb -->
  <div id="termsModal" class="modal" style="display: none;">
    <div class="modal-content">
      <span id="closeTermsModal" class="close">&times;</span>
      <div id="termsContent" style="max-height: 300px; overflow-y: scroll;">
        <h2>利用規約</h2>
        <p>ここに利用規約の内容が入ります...</p>
        <p>ここに利用規約の内容が入ります...</p>
        <p>ここに利用規約の内容が入ります...</p>
        <!-- 必要に応じて利用規約の内容を追加 -->
      </div>
      <button id="acceptTermsButton" disabled>同意する</button>
    </div>
  </div>

  <!-- サインアップフォーム内 -->
  <!-- 他のサインアップフィールド -->
  <div>
    <button type="button" id="openTermsButton">利用規約を読む</button>
    <input type="hidden" id="termsAccepted" name="terms_accepted" value="false">
  </div>
  <div>
    <%= f.submit "サインアップ", id: "signupButton", disabled: true %>
  </div>

  <p>
    <%= f.submit "マイページ作成" %>
  </p>
<% end %>
